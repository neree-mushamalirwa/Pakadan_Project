{% extends 'base.html.twig' %}

{% block title %}Pakadan | Account
{% endblock %}

{% block body %}
	 <script>
						    var mode = "dark_mode";
						    if(localStorage.getItem("dark") == mode){
						        document.querySelector("body").classList.add("dark");
						    }
						</script>
	<div class="container_account">
		<div class="over_back"></div>
		<div class="container_create_account">
			<h3>Créer un compte</h3>
			{% if error %}
				<div style="padding:10px; color:rgba(136, 0, 0, 0.938);">{{ error.messageKey|trans(error.messageData , "security") }}</div>
			{% endif %}
			<form action="{{path('app_connection')}}" method="post">
				<div class="group_input">
					<div class="input">
						<label for="noms">Noms</label>
						<div class="input_icone">
							<svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" viewbox="0 0 24 24" fill="none">
								<path d="M5 21C5 17.134 8.13401 14 12 14C15.866 14 19 17.134 19 21M16 7C16 9.20914 14.2091 11 12 11C9.79086 11 8 9.20914 8 7C8 4.79086 9.79086 3 12 3C14.2091 3 16 4.79086 16 7Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							<input type="text" name="noms" id="username" placeholder="Saisir votre nom complet" required>
						</div>
					</div>
					<div class="input">
						<label for="telephone">Téléphone</label>

						<div class="input_icone">
							<svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" viewbox="0 0 24 24" fill="none">
								<path d="M3 5.5C3 14.0604 9.93959 21 18.5 21C18.8862 21 19.2691 20.9859 19.6483 20.9581C20.0834 20.9262 20.3009 20.9103 20.499 20.7963C20.663 20.7019 20.8185 20.5345 20.9007 20.364C21 20.1582 21 19.9181 21 19.438V16.6207C21 16.2169 21 16.015 20.9335 15.842C20.8749 15.6891 20.7795 15.553 20.6559 15.4456C20.516 15.324 20.3262 15.255 19.9468 15.117L16.74 13.9509C16.2985 13.7904 16.0777 13.7101 15.8683 13.7237C15.6836 13.7357 15.5059 13.7988 15.3549 13.9058C15.1837 14.0271 15.0629 14.2285 14.8212 14.6314L14 16C11.3501 14.7999 9.2019 12.6489 8 10L9.36863 9.17882C9.77145 8.93713 9.97286 8.81628 10.0942 8.64506C10.2012 8.49408 10.2643 8.31637 10.2763 8.1317C10.2899 7.92227 10.2096 7.70153 10.0491 7.26005L8.88299 4.05321C8.745 3.67376 8.67601 3.48403 8.55442 3.3441C8.44701 3.22049 8.31089 3.12515 8.15802 3.06645C7.98496 3 7.78308 3 7.37932 3H4.56201C4.08188 3 3.84181 3 3.63598 3.09925C3.4655 3.18146 3.29814 3.33701 3.2037 3.50103C3.08968 3.69907 3.07375 3.91662 3.04189 4.35173C3.01413 4.73086 3 5.11378 3 5.5Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							<input type="text" name="telephone" id="username" placeholder="Saisir le numero de téléphone" required>
						</div>
					</div>
				</div>
				<div class="input">
					<label for="telephone">Adresse</label>
					<div class="input_icone">
						<svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" viewbox="0 0 20 20" version="1.1">

							<g id="layer1">

								<path d="M 5 3 L 5 4 L 0 4 L 0 18 L 20 18 L 20 4 L 15 4 L 15 3 L 14 3 L 14 4 L 6 4 L 6 3 L 5 3 z M 1 5 L 5 5 L 5 6 L 6 6 L 6 5 L 14 5 L 14 6 L 15 6 L 15 5 L 19 5 L 19 17 L 1 17 L 1 5 z M 2 8 L 2 15 L 8 15 L 8 8 L 2 8 z M 3 9 L 7 9 L 7 14 L 3 14 L 3 9 z M 10 9 L 10 10 L 17 10 L 17 9 L 10 9 z M 10 11 L 10 12 L 17 12 L 17 11 L 10 11 z M 10 13 L 10 14 L 17 14 L 17 13 L 10 13 z " style="fill:#222222; fill-opacity:1; stroke:none; stroke-width:0px;"/>

							</g>

						</svg>
						<input type="text" name="telephone" id="username" placeholder="Saisir l'adresse de votre domicile" required>
					</div>
				</div>
				<div class="input">
					<label for="telephone">Email | Identifiant de connexion</label>
					<div class="input_icone">
						<input type="text" name="telephone" id="username" placeholder="Saisir l'identifiant ou le nom d'utilisateur pour les connexions avenirs" required>
					</div>
				</div>
				<div class="group_input">
					<div class="input">
						<label for="password">Mot de passe</label>
						<div class="input_icone">
							<svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z"/>
							</svg>
							<input type="password" name="password" id="password" placeholder="Saisir le mot de passe" required>
						</div>
					</div>
					<div class="input">
						<label for="password">Confirmer mot de passe</label>
						<div class="input_icone">
							<svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z"/>
							</svg>
							<input type="password" name="password" id="password" placeholder="Confirmer le mot de passe" required>
						</div>
					</div>
				</div>
				<div class="input_submit">
					<button type="submit">
						<span>Créer </span>
					</button>
				</div>
			</form>

			<div class="create_account">
				<span>Vous avez un compte ?</span>
				<a href="{{path('app_login_customer')}}">Connectez-vous</a>
			</div>
		</div>
	</div>
{% endblock %}
