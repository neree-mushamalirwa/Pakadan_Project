{% extends 'base.html.twig' %}

{% block title %}Vitrine | Product | Edit
{% endblock %}

{% block body %}
	{% if app.user %}
			<div class="container_new_item">
				<h3>Modifier le produit</h3>
				<div class="container_form">
					{{ form_start(form, {'method': 'POST' , 'enctype': 'multipart/form-data'}) }}
					{{ form_widget(form) }}
					{# {{ dump(files|json_encode) }} #}
					<div {{svelte_component("Edit" , {file: files|json_encode } )}}></div>

					<div class="input_submit">
						<button type="submit">Modifier</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
	{% endif %}



{% endblock %}

