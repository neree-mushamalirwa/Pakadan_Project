<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Pakadan
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

		{% if "admin" in app.request.get("_route")|split("_") or app.request.get("_route")|split("_")[1] == "admin" %}
			<style>
				body {

					padding: 4% 1% 0 21%;
				}
				@media screen and (max-width: 850px) {
					body {
						padding: 4% 0 0 1%;

                        
					}
                   
				}
				@media screen and (max-width: 501px) {
					 body{
                        padding: 8% 1% 0rem 1%;
                    }
                   
				}
			</style>
		{%  endif %}
	</head>

	<body data-controller="hello">
		{% if "admin" in app.request.get("_route")|split("_") or app.request.get("_route")|split("_")[1] == "admin" %}
			{% include "./partials/app.html.twig" %}

		{% elseif app.request.get("_route") == "app_connection" %}

		{% else %}
			{% include "./partials/header.html.twig" %}
		{% endif %}

		{% block body %}{% endblock %}


		{% if "admin" in app.request.get("_route")|split("_") or app.request.get("_route")|split("_")[1] == "admin" or app.request.get("_route") == "app_connection" %}

			{% else %}
				{% include "./partials/footer.html.twig" %}
		{% endif %}

	</body>
</html>
