<div{{attributes}}>
	{% if categoryItem %}
		<div class="factories">
			<section class="container_factories">

                {% set factoriesItems = this.factoriesItemData %}
				{% if factoriesItems %}
					<div class="container_list_items">
						{% for item in factoriesItems %}
							<div class="item_list">
								<div class="logo">
									<div class="image">
										<img src="/images/{{item.imageName[0]}}" alt="category">
									</div>
								</div>
								<div class="right_part">
									<div class="item_name">
										<h4>{{item.name}}</h4>
										<strong>{{item.categoryItem.name}}</strong>
									</div>
									<div class="description">
										<p>{{item.description|nl2br}}</p>
									</div>
									<div class="address">
										<p>{{item.adresse}}</p>
									</div>
									<div class="visit_space">
										<a href="{{path('app_show_case' , {id: item.id , factory: item.name})}}">Visiter la vitrine</a>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<div class="see_more">
						<button data-action="live#action" data-live-action-param="incrementFactories">
							<span>Voir plus</span>
							<svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" viewbox="0 0 16 16" fill="none">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M0 8L3.07945 4.30466C4.29638 2.84434 6.09909 2 8 2C9.90091 2 11.7036 2.84434 12.9206 4.30466L16 8L12.9206 11.6953C11.7036 13.1557 9.90091 14 8 14C6.09909 14 4.29638 13.1557 3.07945 11.6953L0 8ZM8 11C9.65685 11 11 9.65685 11 8C11 6.34315 9.65685 5 8 5C6.34315 5 5 6.34315 5 8C5 9.65685 6.34315 11 8 11Z" fill="#000000"/>
							</svg>
						</button>
					</div>
				{% endif %}

			</section>
		</div>
	{% endif %}

</div>
